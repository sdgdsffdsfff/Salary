<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="Template" namespace="/" extends="struts-default">
    	<result-types>
	    	<result-type name="json" class="org.apache.struts2.json.JSONResult"></result-type>
	    </result-types>
	    <interceptors>
	    	<!-- 检测用户的session是否有效 -->
	    	<interceptor name="commonInterceptor" class="com.salary.interceptor.commonInterceptor" />
	    	<interceptor-stack name="mydefaultinterceptor">
	    		<interceptor-ref name="defaultStack" />
	    		<interceptor-ref name="commonInterceptor" />
	    	</interceptor-stack>
	    </interceptors>
	    <default-interceptor-ref name="mydefaultinterceptor" />
	    
	   	<global-results>
            <result name="input">/login.jsp</result>
            <result name="none">/common/noAuthor.jsp</result>
        </global-results>
	    <!-- 
        <global-results>
            <result name="error">/common/Error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
		 -->
		
		<!--  -->
		<action name="" class="com.salary.action." method="">
			<result name="success"></result>
		</action>
		
		
    </package>
</struts>
